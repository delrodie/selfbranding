{{ form_start(form) }}
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="row">
                <div class="col-md-12 mt-3">{{ form_row(form.username) }}</div>
                <div class="col-md-12 mt-3">{{ form_row(form.email) }}</div>
                <div class="col-md-12 mt-3">{{ form_row(form.password) }}</div>

                <div class="col-md-12 checkbox mt-3">
                    {{ form_widget(form.roles.0) }}
                    {{ form_label(form.roles.0) }}
                </div>
                <div class="col-md-12 checkbox mb-1">
                    {{ form_widget(form.roles.1) }}
                    {{ form_label(form.roles.1) }}
                </div>
            </div>
            {{ form_widget(form) }}
            <div class="text-right">
                <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">Annuler</a>
                <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
