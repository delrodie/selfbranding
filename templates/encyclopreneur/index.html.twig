{% extends 'single_layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 wow fadeInRight">
                <h4 class="title">Encyclopreneurs</h4>
                <h2 class="title">Nos entrepreneurs</h2>
                <div class="title-underline"></div>
            </div>
        </div>
        <div class="row wow fadeInRight" data-wow-delay=".25s">
            {% for encyclo in encyclopreneurs %}
                <div class="col-lg-4 col-md-6 mb30">
                    <div class="bloglist item">
                        <div class="post-content">
                            <div class="post-image d-hover-zoom">
                                <a class="image-popup" href="{{ absolute_url(asset('upload/encyclopreneur/2/'~ encyclo.media2)) }}">
                                    <img alt="" src="{{ absolute_url(asset('upload/encyclopreneur/1/'~ encyclo.media1)) }}">
                                </a>
                                <div class="post-info">
                                    <div class="inner">
                                        <span class="post-date">{{ encyclo.prenoms }} {{ encyclo.nom }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="post-text">
                                <h4><a href="{{ absolute_url(path('frontend_encyclopreneur_show', {'slug': encyclo.slug})) }}"><i class="fa fa-eye"></i> Biographie</a></h4>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% if encyclopreneurs|length > 6 %}
                <div class="text-right" style="margin-top: 30px;color: var(--primary-color); text-align:right; font-size: 1.2rem; font-style:italic; font-weight:bold;">
                    <a href="#" style="color: var(--primary-color); text-align:right;"><i class="fa fa-users"></i> Voir tous les entrepreneurs</a>
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-md-10 offset-md-1 mt-5 logo-retour text-right">
                <a href="{{ absolute_url(path('app_home')) }}"> <i class="fa fa-reply"></i>
                    RETOUR
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}SelfBranding:: l'encyclopedie des entrepreneurs {% endblock %}
{% block meta %}
    <meta name="keywords" content="encyclopreneur, accompagnement entrepreneurial, management, entrepreneur"  />
    <meta name="description" content="L'encyclopedie des jeunes entrepreneurs africains " />
    <link rel="canonical" href="{{ absolute_url(path('frontend_encyclopreneur_index')) }}" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:type" content="Item" />
    <meta property="og:title" content="SelfBranding:: l'encyclopedie des entrepreneurs" />
    <meta property="og:description" content="L'encyclopedie des jeunes entrepreneurs africains" />
    <meta property="og:url" content="{{ absolute_url(path('frontend_encyclopreneur_index')) }}" />
    <meta property="og:site_name" content="SelfBranding" />
    <meta property="article:section" content="Item" />
    <meta property="article:published_time" content="{{ premier.createdAt|date('Y-m-d') }}T{{ premier.createdAt|date('H:i:s') }}+00:00" />
    <meta property="article:modified_time" content="{{ dernier.updatedAt|date('Y-m-d') }}T{{ dernier.updatedAt|date('H:i:s') }}+00:00" />
    <meta property="og:updated_time" content="{{ dernier.updatedAt|date('Y-m-d') }}T{{ dernier.updatedAt|date('H:i:s') }}+00:00" />
    <meta property="og:image" content="{{ absolute_url(asset('/embleme.jpg')) }}" />
    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:description" content="L'encyclopedie des jeunes entrepreneurs africains"/>
    <meta name="twitter:title" content="SelfBranding:: l'encyclopedie des entrepreneurs "/>
    <meta name="twitter:domain" content="SelfBranding"/>
    <meta name="twitter:image:src" content="{{ absolute_url(asset('/embleme.jpg')) }}"/>
{% endblock %}

