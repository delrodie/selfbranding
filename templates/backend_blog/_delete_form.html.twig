<form method="post" action="{{ path('backend_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet article?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
