{% extends 'security_layout.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <div class="signin-sidebar">
        <div class="signin-sidebar-body">
            <a href="{{ path('backend_dashbord') }}" class="sidebar-logo mg-b-40"><span>SELFBRANDING</span></a>

            {{ form_start(resetForm) }}

            {% if app.user %}
                <div class="mb-3">
                    {% trans %}You are logged in as{% endtrans%} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
                </div>
            {% endif %}

            <h5 class="signin-subtitle">{% trans %}Reset your password{% endtrans %}</h5>
            <div class="signin-form">
                <div class="form-group">
                    {{ form_row(resetForm.plainPassword) }}
                </div>
            </div>



            <div class="form-group d-flex mg-b-0">
                <input type="hidden" value="{{ token }}" name="_token">
                <button type="submit" class="btn btn-brand-01 btn-uppercase flex-fill">{% trans %}Reset password{% endtrans %}</button>
            </div>
            {{ form_end(resetForm) }}

        </div>
    </div>
{% endblock %}